<launch>
  <!-- Arguments -->
  <arg name="model" default="boxer"/>
  <arg name="map_file" default="$(find mobile_navigation)/maps/good_map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="use_amcl" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- Gmapping , only possible and necessary when no map is available-->
  <!--include file="$(find mobile_navigation)/launch/gmapping.launch"/-->

  <!-- AMCL -->
  <group if="$(arg use_amcl)">
    <include file="$(find mobile_navigation)/launch/amcl.launch"/>
  </group>

  <!-- EKF -->
  <group unless="$(arg use_amcl)">
    <include file="$(find mobile_navigation)/launch/ekf.launch"/>
  </group>


  <!-- move_base -->
  <include file="$(find mobile_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find mobile_navigation)/rviz/mmrobot_navigation.rviz"/>
  </group>
</launch>
