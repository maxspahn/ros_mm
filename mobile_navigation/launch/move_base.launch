<launch>
  <!-- Arguments -->
  <arg name="robot_namespace" default="mmrobot"/>
  <arg name="cmd_vel_topic" default="$(arg robot_namespace)/boxer_velocity_controller/cmd_vel" />
  <arg name="odom_topic" default="$(arg robot_namespace)/ground_truth_odom" />
  <arg name="move_forward_only" default="false"/>

  <arg name="model" default="boxer" />

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <!--param name="base_global_planner" value="SBPLLatticePlanner" />
    <param name="SBPLLatticePlanner/primitives_filename" value="$(find mobile_navigation)/param/pr2.mprim"/-->
    <rosparam file="$(find mobile_navigation)/param/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find mobile_navigation)/param/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find mobile_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find mobile_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find mobile_navigation)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find mobile_navigation)/param/dwa_local_planner_params_$(arg model).yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
