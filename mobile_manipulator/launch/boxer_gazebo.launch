<launch>
  <param name="boxer/robot_description" command="$(find xacro)/xacro --inorder $(find mobile_manipulator)/robot_description/boxer.urdf.xacro"/>

  <!-- GAZEBO arguments -->
  <arg name="paused" default="true"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="use_rviz" default="false"/>

  <!--launch GAZEBO with own world configuration -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <!-- <arg name="world_name" value="$(find robotics_assisted_tomography)/worlds/tomography.world"/> -->
      <arg name="debug" value="$(arg debug)"/>
      <arg name="gui" value="$(arg gui)"/>
      <arg name="paused" value="$(arg paused)"/>
      <arg name="use_sim_time" value="$(arg use_sim_time)"/>
      <arg name="headless" value="$(arg headless)"/>
  </include>

  <node name="spawn_urdf" ns="/boxer" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model boxer"/>

  <include file="$(find mobile_manipulator)/launch/boxer_control.launch">
    <arg name="use_rviz" value="false"/>
  </include>

    

</launch>
